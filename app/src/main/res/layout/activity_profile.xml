<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8acecf"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="219dp"
        android:text="Qualification:"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_marginTop="259dp"
        android:text="Blood Group:"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/profile_qual"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/prof_name"
        android:layout_alignTop="@+id/textView7"
        android:text="User Type:"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/prof_bgrp"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profile_qual"
        android:layout_alignTop="@+id/textView6"
        android:text="User Type:"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/profile_decline_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp"

        android:text="Send Friend Request"
        android:textColor="@android:color/black" />

    <include
        android:id="@+id/profilebar"
        layout="@layout/app_bar_layout"
        android:text="Profile"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/prof_name"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="141dp"
        android:text="DisplayText"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/req_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="179dp"
        android:text="Send Chat Request"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/white" />


    <!--<ImageView
        android:id="@+id/profile_image"

        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profilebar"
        android:adjustViewBounds="true"
        android:background="#ffffcc"
        android:backgroundTint="#ffffcc"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:srcCompat="@drawable/user" />-->


    <TextView

        android:id="@+id/profile_prf"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/profile_qual"
        android:layout_marginTop="180dp"
        android:text="Current User Status"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignTop="@+id/profile_prf"
        android:text="Profession:"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignTop="@+id/prof_name"
        android:text="Name:"
        android:textColor="@android:color/black"
        android:textSize="16sp" />


</RelativeLayout>